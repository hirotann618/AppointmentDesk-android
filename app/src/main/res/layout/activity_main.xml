<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textSize="30sp"
            android:textAlignment="center" android:textColor="#000000" android:text="@string/app_name"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.454" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:hint="@string/e_mail" android:autofillHints=""/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/emailText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.454" android:hint="@string/password" android:autofillHints=""/>
    <Button
            android:text="@string/login"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:id="@+id/loginbutton" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.454"/>
</android.support.constraint.ConstraintLayout>